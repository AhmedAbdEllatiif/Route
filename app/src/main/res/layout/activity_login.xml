<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imgRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/txtroute"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtServey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey"
        android:textSize="40sp"
        android:textColor="@color/lightGreen"
        app:layout_constraintTop_toBottomOf="@id/imgRoute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/txtModerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moderator"
        android:textColor="@color/blue"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtServey"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtModerator"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >

<android.support.design.widget.TextInputEditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/userName"
    android:drawableStart="@drawable/user"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:drawablePadding="8dp"
    tools:ignore="RtlCompat" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtInputUser"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btnshap"
        app:layout_constraintTop_toBottomOf="@id/txtInputPass"
        android:layout_marginTop="10dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="25sp"
        />



</android.support.constraint.ConstraintLayout>